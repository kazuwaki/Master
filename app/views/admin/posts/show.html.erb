<div class="container">
    <div class="row">
        <div class="col-8 offset-2 mt-5">
            <h2>『<%= @post.customer.name %>』さんの『<%= @post.name %>』の投稿　<%= link_to "delete", admin_post_path(@post), method: :delete, class: "btn btn-outline-danger" %></h2>
            <div class="post-show mt-2 pl-2 card">
                <div class="post-show">
                    <%= image_tag @post.get_image(200,200), style: "height:150px; width:auto; object-fit: cover"%>
                    <div class="card-name">
                        <div class="d-flex flex-row">
                            <p class="col-3">お酒の名前:</p>
                            <p><%= @post.name %></p>
                        </div>
                    </div>
                    <div class="card-text">
                        <div class="d-flex flex-row">
                            <p class="col-3">材料・作り方:</p>
                            <p><%= @post.body %></p>
                        </div>
                    </div>
                    <div class="post-genre">
                        <div class="d-flex flex-row">
                            <p class="col-3">Type:</p>
                            <p class="col-6"><%= link_to @post.type.name, post_search_posts_path(type_id: @post.type.id, model: "type" ), class: "btn btn-outline-secondary col-4" %></p>
                        </div>
                        <div class="d-flex flex-row">
                            <p class="col-3">Alcohol:</p>
                            <p class="col-6"><%= link_to @post.alcohol.name, post_search_posts_path(alcohol_id: @post.alcohol.id, model: "alcohol" ), class: "btn btn-outline-secondary col-4" %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>