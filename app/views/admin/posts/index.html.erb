<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>body</th>
            <th>投稿者名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= image_tag post.get_image(100,100) %></td>
              <td><%= post.name %></td>
              <td><%= post.body %></td>
              <td><%= post.customer.name %></td>
              <td><%= link_to "削除", "/admin/posts/#{post.id}", method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>