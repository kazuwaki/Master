<% post.post_comments.each do |post_comment| %>
  <div class="card">
    <div class="comment-info d-flex flex-row border">
      <p class="customers-images"><%= image_tag post_comment.customer.get_profile_image(50,50), class: "customer-show-images" %></p>
      <p class="d"><%= post_comment.customer.name %></p>
      <p class=""><%= post_comment.created_at.strftime('%Y/%m/%d' )%>
        <% if post_comment.customer.id == current_customer.id %>
          <%= link_to post_post_comment_path(post_comment.post,post_comment), method: :delete, remote: true do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </p>
    </div>
    <div class="comment">
      <%= post_comment.comment %>
    </div>
  </div>
<% end %>