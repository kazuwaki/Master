<h1>Public::Customers#edit</h1>
<%= form_with model: @customer, url: information_customers_path do |f| %>
  <div class="feild">
    <%= f.label "プロフィール画像" %>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="feild">
    <%= f.label "自己紹介" %>
    <%= f.text_area :introduction %>
  </div>
  <div class="field">
    <%= f.submit "内容を保存" %>
  </div>
<% end %>