<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-5">
        <div class="card-title border-bottom mb-3"><h2 class="mt-2 ml-5">登録変更</h2></div>
        <%= render "layouts/errors", obj: @customer %>
        <%= form_with model: @customer do |f| %>
          <table class="table table-borderless">
           <tr>
             <th><%= f.label "プロフィール画像" %></th>
             <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
           </tr>
           <tr>
             <th><%= f.label :name %></th>
             <td><%= f.text_field :name %></td>
           </tr>
           <tr>
             <th><%= f.label "自己紹介" %></th>
             <td><%= f.text_area :introduction, size: '40x4' %></td>
           </tr>
           <tr>
             <th></th>
             <td><%= f.submit "内容を保存", class: "btn btn-outline-success" %></td>
           </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>