<table class="table">
  <thead class="table-secondary">
   <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
   <% customers.each do |customer| %>
    <tr>
     <td><%= link_to customer_path(customer.id) do %>
      <%= image_tag customer.get_profile_image(100,100) %><% end %>
     </td>
     <td><%= customer.name %></td>
     <td><%= link_to customer_followings_path(customer.id), class: "follow-count" do %>フォロー： <%= customer.followings.count %>人<% end %></td>
     <td><%= link_to customer_followers_path(customer.id), class: "follow-count" do %>フォロワー： <%= customer.followers.count %>人<% end %></td>
     <td><%= link_to "詳細をみる", customer_path(customer), class: "btn btn-outline-secondary" %></td>
    </tr>
   <% end %>
  </tbody>
</table>