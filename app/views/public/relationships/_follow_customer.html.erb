<table class="table">
  <thead>
   <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
   <% customers.each do |customer| %>
    <tr>
     <td><%= link_to customer_path(customer.id) do %>
      <%= image_tag customer.get_profile_image(200,200) %><% end %>
     </td>
     <td><%= customer.name %></td>
     <td>フォロー数: <%= customer.followings.count%></td>
     <td>フォロワー数: <%= customer.followers.count%></td>
     <td><%= link_to "詳細をみる", customer_path(customer) %></td>
    </tr>
   <% end %>
  </tbody>
</table>