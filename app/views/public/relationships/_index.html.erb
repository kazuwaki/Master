  <% customers.each do |customer| %>
    <tr>
      <td><%= link_to customer_path(customer.id) do %>
        <%= image_tag customer.get_profile_image(100,100) %><% end %>
      </td>
      <td><%= customer.name %></td>
      <td><%= customer.introduction %></td>
      <td><%= render 'public/relationships/follow_button', customer: customer %></td>
      <td>フォロー中 : <%= link_to customer.followings.count, customer_followings_path(customer.id) %></td>
      <td>フォロワー : <%= link_to customer.followers.count, customer_followers_path(customer.id) %></td>
    </tr>
  <% end %>
