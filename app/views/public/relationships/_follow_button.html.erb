<div class='row'>
  <% unless current_customer == customer %>
    <% if current_customer.following?(customer) %>
      <%= link_to 'Unfollow', customer_relationships_path(customer.id), class: 'btn btn-info', method: :delete, remote: true %>
    <% else %>
      <%= link_to 'Follow', customer_relationships_path(customer.id), class: 'btn btn-success', method: :post, remote: true %>
    <% end %>
  <% else %>
    <%= link_to 'Edit',edit_customer_path(customer),class: "btn btn-secondary" %>
  <% end %>
</div>