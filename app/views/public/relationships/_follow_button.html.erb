<div class='row'>
  <% if current_customer.name != "guestuser" %>
    <% if current_customer != customer %>
      <% unless customer.name == "guestuser" %>
        <% if current_customer.following?(customer) %>
          <%= link_to 'Unfollow', customer_relationships_path(customer.id), class: 'btn btn-outline-info col-10', method: :delete, remote: true %>
        <% else %>
          <%= link_to 'Follow', customer_relationships_path(customer.id), class: 'btn btn-outline-success col-10', method: :post, remote: true %>
        <% end %>
      <% end %>
    <% else %>
      <%= link_to 'Edit',edit_customer_path(customer),class: "btn btn-outline-secondary col-10" %>
    <% end %>
  <% end %>
</div>