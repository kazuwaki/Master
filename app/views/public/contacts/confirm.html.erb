<div class="container">
  <div class="row">
    <div class="col-8 offset-2 mt-5">
      <div class="card mt-5">
        <div class="card-title border-bottom mb-3"><h2 class="mt-2 ml-5">お問い合わせ内容確認</h2></div>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="name">お名前</td>
            <td><%= @contact.name %></td>
          </tr>
          <tr>
            <td class="email">メールアドレス</td>
            <td><%= @contact.email %></td>
          </tr>
          <tr>
            <td class="phone_number">電話番号</td>
            <td><%= @contact.phone_number %></td>
          </tr>
          <tr>
            <td class="subject">お問合せ件名</td>
            <td><%= @contact.subject_i18n %></td>
          </tr>
          <tr>
            <td class="contact-message">メッセージ</td>
            <td><%= @contact.message %></td>
          </tr>
        </tbody>
      </table>
      <div class="form-btn d-flex flex-row ml-5 mb-3">
        <%= form_with model: @contact do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :phone_number %>
          <%= f.hidden_field :subject %>
          <%= f.hidden_field :message %>
          <div><%= f.submit '送信', class: "btn btn-outline-success mr-5" %></div>
        <% end %>
        <%= form_with model: @contact, url: back_path do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :phone_number %>
          <%= f.hidden_field :subject %>
          <%= f.hidden_field :message %>
          <div><%= f.submit '入力画面に戻る', class: "btn btn-outline-secondary" %></div>
        <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


