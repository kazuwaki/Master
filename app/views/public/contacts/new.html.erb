<div class="container">
  <div class="row">
    <div class="col-8 offset-2 mt-5">
      <%= render "layouts/errors", obj: @contact %>
      <h2 class="mb-2">お問い合わせ</h2>
        <%= form_with model: @contact, url: confirm_path do |f| %>
          <div class="form-group">
            <%= f.label :name, 'お名前*' %>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :email, 'メールアドレス*' %>
            <%= f.email_field :email, size: '10x10', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :phone_number, '電話番号*' %>
            <%= f.text_field :phone_number, size: '10x10', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :subject, 'お問合せ件名*' %>
            <%= f.select :subject, options_for_select(Contact.subjects_i18n.keys.map { |k| [Contact.subjects_i18n[k], k]}, selected: @contact.subject) %>
          </div>

          <div class="form-group">
            <%= f.label :message, 'メッセージ*' %>
            <%= f.text_area :message, size: '10x10', class: 'form-control' %>
          </div>

          <div class="from-group">
            <%= f.submit '入力内容確認', class: "btn btn-outline-success mb-5" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
