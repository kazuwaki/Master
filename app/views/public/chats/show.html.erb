<div class="container">
  <div class="row">
    <div class="col-8 offset-2 mt-5">
      <h1 id="room" data-room="<%= @room.id %>" data-customer="<%= current_customer.id %>"><%= @customer.name %> さんとのチャット</h1>

      <div class="message">
        <% @chats.each do |chat| %>
          <% if chat.customer_id == current_customer.id %>
            <p class="balloon1-right", style="text-align: right;"><%= chat.message %></p>
          <% else %>
            <div class="d-flex flex-row">
              <p class="customers-images mt-5"><%= image_tag chat.customer.get_profile_image(50,50) %></p>
              <p class="balloon1-left", style="text-align: left;"><%= chat.message %></p>
            </div>
          <% end %>
        <% end %>
      </div>

      <%= form_with model: @chat, data: {remote: true} do |f| %>
        <div class="field">
          <%= f.text_field :message, class: "w-100" %>
          <%= f.hidden_field :room_id %>
        </div>
      <% end %>
    </div>
  </div>
</div>