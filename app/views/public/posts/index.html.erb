<div class="container">
  <div class="row">
    <div class="col-2">
      <div class="type mt-5">
        <h6>カクテルタイプ</h6>
        <% @types.each do |type| %>
          <div class="typ-name">
            <%= link_to type.name, post_search_posts_path(type_id: type.id, model: "type" ), class: "btn btn-outline-secondary col-10 mt-2" %>
          </div>
        <% end %>
      </div>
      <div class="alcohol mt-5">
        <h6>アルコール度数</h6>
        <% @alcohols.each do |alcohol| %>
          <div class="alcohol-name">
            <%= link_to alcohol.name, post_search_posts_path(alcohol_id: alcohol.id, model: "alcohol" ), class: "btn btn-outline-secondary col-10 mt-2" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-10">
      <h2 class="text-center">投稿一覧</h2>
      <% if current_customer.name != "guestuser" %>
        <%= link_to "投稿作成", new_post_path %>
      <% end %>
      <div class="d-flex flex-wrap justify-content-around w-100">
          <% @posts.each do |post| %>
          <div class="reference-position w-25">
            <%= link_to post_path(post.id), class: "mb-3 card item-card", style: "padding: 0;" do %>
              <%= image_tag post.get_image(200,200), class: "card-img-top",  style: "height:250px object-fit: cover" %>
              <div class="card-body">
                <h5 class="card-title"><%= post.name %></h5>
              </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>