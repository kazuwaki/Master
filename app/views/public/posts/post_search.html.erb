<div class="container">
  <div class="row mt-5">
     <div class="col-10 offset-1">
      <% if @posts.size > 0 %>
        <h2 class="text-center mb-5">「<%= @word %>」の検索結果です</h2>
        <div id="postindex">
          <%= render "public/posts/index1_page", posts: @posts %>
        </div>
      <% else %>
        <h2 class="text-center">「<%= @word %>」の検索結果はありません</h2>
      <% end %>
    </div>
  </div>
</div>