<h1>Posts#index</h1>
<div class="container">
  <div class="row">
    <div class="col-2"></div>
      <div class="col-10">
        <% if @posts.size == 0 %>
          <h2><%= @word %>の検索結果はありません</h2>
        <% else %>
          <%= render "public/posts/index", posts: @posts %>
        <% end %>
      </div>
    </div>
  </div>
</div>