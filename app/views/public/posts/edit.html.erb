<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto text-center">
      <%= render "layouts/errors", obj: @post %>
      <div class="card">
        <div class="card-title border-bottom"><h2 class="text-center">登録変更</h2></div>
          <%= form_with model: @post, url: post_path  do |f| %>
            <table class="tb01 table table-borderless">
              <tr>
                <th><%= f.label "画像" %></th>
                <td><%= f.file_field :image, placeholder: "お酒の画像", accept: "image/*" %></td>
              </tr>
              <tr>
                <th><%= f.label "お酒の名前" %></th>
                <td><%= f.text_field :name %></td>
              </tr>
              <tr>
                <th><%= f.label "材料・作り方" %></th>
                <td><%= f.text_area :body, class: "text-form" %></td>
              </tr>
              <tr>
                <th><%= f.label "type" %></th>
                <td><%= f.collection_select(:type_id, Type.all, :id, :name, prompt: "選択してください" ) %></td>
              </tr>
              <tr>
                <th><%= f.label "alcohol" %></th>
                <td><%= f.collection_select(:alcohol_id, Alcohol.all, :id, :name, prompt: "選択してください" ) %></td>
              </tr>
              <tr>
              <tr>
                <th><%= f.label "公開・非公開の選択" %></th>
                <td><%= f.select :status, options_for_select(Post.statuses_i18n.keys.map { |k| [Post.statuses_i18n[k], k]}, selected: @post.status) %></td>
              </tr>
                <th></th>
                <td><%= f.submit "内容を保存", class: "btn btn-outline-success" %></td>
              </tr>
            </table>
          <% end %>
      </div>
    </div>
  </div>
</div>

