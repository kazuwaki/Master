<header class="top-header">
  <nav class="navbar navbar-expand-lg shadow-sm">
    <div class="navbar-brand col-1">
      <% if admin_signed_in? %>
        <%= link_to admin_posts_path do %>
          <img src="/assets/logo.png" alt="ロゴ" width="100" height="40">
        <% end %>
      <% else %>
        <%= link_to root_path do %>
          <img src="/assets/logo.png" alt="ロゴ" width="100" height="40">
        <% end %>
      <% end %>
    </div>
    <span class="ml-auto col-3 d-none d-sm-block">
      <%= render "public/posts/form" %>
    </span>
    <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <li>
            <%= link_to  admin_posts_path, class: "btn btn-outline-light" do %>
              <i class="fas fa-glass-cheers"></i>投稿一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_time_lines_path, class: "btn btn-outline-light" do %>
              <i class="fas fa-mail-bulk"></i>タイムライン
            <% end %>
          </li>
          <li>
            <%= link_to admin_types_path, class: "btn btn-outline-light" do %>
              <i class="fas fa-stream"></i>タイプ
            <% end %>
          </li>
          <li>
            <%= link_to admin_alcohols_path, class: "btn btn-outline-light" do %>
              <i class="fas fa-wine-bottle"></i>アルコール
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class: "btn btn-outline-light" do %>
              <i class="fas fa-sign-out-alt"></i>ログアウト
            <% end %>
          </li>
        <% elsif customer_signed_in? %>
          <li>
            <%= link_to posts_path, class: "btn btn-outline-light" do %>
              <i class="fas fa-glass-cheers"></i>投稿一覧
            <% end %>
          </li>
          <li>
            <%= link_to customer_path(current_customer), class: "btn btn-outline-light" do %>
              <i class="fas fa-user"></i>マイページ
            <% end %>
          </li>
          <li>
            <%= link_to customers_path, class: "btn btn-outline-light" do %>
              <i class="fas fa-users"></i>ユーザー
            <% end %>
          </li>
          <li>
            <%= link_to time_lines_path, class: "btn btn-outline-light" do %>
              <i class="fas fa-mail-bulk"></i>タイムライン
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete , class: "btn btn-outline-light" do %>
              <i class="fas fa-sign-out-alt"></i>ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to new_customer_registration_path, class: "btn btn-outline-light"  do %>
              <i class="fas fa-user-plus"></i>新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path, class: "btn btn-outline-light"  do %>
              <i class="fas fa-sign-in-alt"></i>ログイン
            <% end %>
          </li>
          <li>
            <%= link_to root_path, class: "btn btn-outline-light"  do %>
              <i class="fas fa-home"></i>Top
            <% end %>
          </li>
          <li>
            <%= link_to about_path, class: "btn btn-outline-light"  do %>
              <i class="fas fa-cocktail"></i>About
            <% end %>
          </li>
        <% end %>
      </ul>
  </nav>
</header>